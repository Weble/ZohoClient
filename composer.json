{
  "name": "weble/zohoclient",
  "description": "Zoho API Client for oAuth auth and common tasks - PHP SDK",
  "license": "MIT",
  "keywords": [
    "zoho",
    "api",
    "oauth2"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Daniele Rosario",
      "email": "daniele@weble.it"
    }
  ],
  "require": {
    "php": "^8.0",
    "psr/cache": "^2.0 || ^3.0",
    "league/oauth2-client": "^2.6",
    "asad/oauth2-zoho": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.5 || ^9.3",
    "vlucas/phpdotenv": "^4.1 || ^5.2",
    "cache/array-adapter": "^1.0",
    "phpstan/phpstan": "^1.9"
  },
  "autoload": {
    "psr-4": {
      "Weble\\ZohoClient\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse src tests --level=9",
    "analyize": "@analyse",
    "test": "phpunit --coverage-text --coverage-clover cov.xml --whitelist src/"
 },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
